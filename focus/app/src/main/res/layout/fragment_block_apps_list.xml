<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.TabBlockAppsList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1.2"
            android:background="@drawable/title"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="Block Apps"
                android:textAlignment="viewStart"
                android:textColor="@color/ic_launcher_background"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/customborder"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/app1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/facebooktitle"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="103dp"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="Facbook"
                    android:textColor="@color/white"
                    android:textColorLink="@color/white"
                    android:textSize="18sp"
                    android:theme="@style/WhiteCheck" />

                <ImageView
                    android:id="@+id/app1_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="TODO"
                    app:srcCompat="@drawable/facebookicon" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/customborder"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/app2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@drawable/instegramtitle"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/instegram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/app1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="103dp"
                    android:layout_weight="1"
                    android:text="Instegram"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:theme="@style/WhiteCheck" />

                <ImageView
                    android:id="@+id/app2_image"
                    android:layout_width="44dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:contentDescription="TODO"
                    app:srcCompat="@drawable/instagram" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:background="@drawable/customborder"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/app3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/block"
                android:layout_centerHorizontal="true"
                android:background="@drawable/title"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/messenger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/app1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="90dp"
                    android:layout_weight="1"
                    android:text="Messenger"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:theme="@style/WhiteCheck" />

                <ImageView
                    android:id="@+id/app3_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="TODO"
                    app:srcCompat="@drawable/messenger" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:gravity="top|center"
            android:orientation="vertical"
            android:padding="20dp">

            <Button
                android:id="@+id/block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/addbutton"
                android:text="Submit"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>